<UserControl x:Class="CustomXAMLControls.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomXAMLControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="20">
        <TextBlock Text="Lorem ipsum." />
        <CheckBox x:Name="AgreeCheckBox">I agree!</CheckBox>
        <Button IsEnabled="{Binding Path=IsChecked, ElementName=AgreeCheckBox}">Submit</Button>
    </StackPanel>
</UserControl>
